<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context=".MainActivity"
    app:umanoDragView="@id/main"
    app:umanoOverlay="true"
    app:umanoParallaxOffset="0dp"
    app:umanoPanelHeight="70dp"
    app:umanoShadowHeight="0dp">
    <LinearLayout android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:fontFamily="sans-serif-light"
            android:text="Diary"
            android:textColor="@color/font"
            android:textSize="28sp"
            android:textStyle="bold"
            android:shadowRadius="2"
            android:shadowColor="#C3C3C3"
            android:shadowDx="5"
            android:shadowDy="5"/>

        <TextView android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:text="1627 / 02 / 17"
            android:textColor="@color/font"
            android:textSize="24sp"
            android:shadowRadius="2"
            android:shadowColor="#C3C3C3"
            android:shadowDx="5"
            android:shadowDy="5"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="20dp"
            android:background="@drawable/calendar"
            android:elevation="8dp">
            <CalendarView android:id="@+id/celendar"
                android:layout_marginTop="-60dp"
                android:theme="@style/calendarViewCustom"
                android:dateTextAppearance="@style/calendarViewDateCustomText"
                android:weekDayTextAppearance="@style/calendarViewWeekCustomText"
                />
        </TableLayout>
    </LinearLayout>

    <include layout="@layout/drawer"/>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>